<?xml version="1.0" encoding="utf-8"?>

<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.gabriel.apptodolist.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/shape_gradient_bg"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edt_tarefa"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_default"
            android:layout_marginRight="@dimen/margin_default"
            android:layout_weight="3"
            android:textColor="@color/colorWhite"
            android:hint="Digite uma nova tarefa"
            android:textColorHint="@color/colorWhiteTransparent"/>

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="@dimen/margin_default"
            android:text="Ok"
            android:background="@drawable/shape_btn_ok"
            android:textColor="@color/colorWhite"/>

    </LinearLayout>

    <ListView
        android:id="@+id/list_tarefas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
>

    </ListView>

</LinearLayout>
